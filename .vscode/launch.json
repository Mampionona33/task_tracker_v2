  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch firefox localhost API",
      "url": "http://localhost:3000/graphql",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch firefox localhost UI",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}"
    },

    {
      "name": "Launch Chrome UI",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Chrome API",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:3000/graphql",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
